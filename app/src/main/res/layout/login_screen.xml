<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frag1_signin_tite"
        android:id="@+id/frag1_titleScreen"
        android:padding="50dp"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_edittext_background"
        android:hint="@string/frag1_singin_screenname_hint"
        android:textSize="30sp"
        android:textColorHint="#520000"
        android:id="@+id/frag1_edittext_screenname"
        android:layout_marginTop="@dimen/activity_vertical_margin"

        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="30dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_edittext_background"
        android:hint="PassWord"
        android:textSize="30sp"
        android:textColorHint="#520000"

        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/activity1_signin_button"
        android:id="@+id/activty1_loginBtn"
        android:clickable="true"
        android:onClick="SignIn"

        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/activity2_signin_button"

            />
    </LinearLayout>
</LinearLayout>